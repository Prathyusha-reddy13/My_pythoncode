amount = int(input("enter the amount"))
if amount <=1000:
    dis_count = (10/100)*amount
elif amount>1000 and amount<=5000:
    dis_count = (20/100)*amount
elif amount>5000 and amount<=10000:
    dis_count = (30/100)*amount
else:
    dis_count = (50/100)*amount
print("The discounted amount is :",dis_count)
payable_amount = amount - dis_count
print("Amount that should be payable is :",payable_amount)
